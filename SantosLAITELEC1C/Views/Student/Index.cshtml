@model IEnumerable<Student>;

<div>Student List</div>
<a asp-action="AddStudent">Add Student</a>
<table class="table table-dark">

    <tr>
        <th colspan="7">Student</th>
    </tr>

    <tr>
        <td>ID</td>
        <td>Name</td>
        <td>Course</td>
        <td>Birth Date</td>
        <td>Show Details</td>
        <td>Edit Details</td>
        <td>Delete</td>


    </tr>
    @foreach (var student in Model)
    {
        <tr>
            <td>@student.Id</td>
            <td>@student.FirstName @student.LastName</td>
            <td>@student.Course</td>
            <td>@student.BirthDate</td>
            <td><a asp-action="ShowDetails" asp-route-id="@student.Id">Show Details</a></td>
            <td><a asp-action="Edit" asp-route-id="@student.Id">Edit Details</a></td>
            <td><a asp-action="Delete" asp-route-id="@student.Id">Delete</a></td>
        </tr>
    }
</table>

