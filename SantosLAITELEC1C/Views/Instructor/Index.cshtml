@model IEnumerable<Instructor>;

<div>Instructor List</div>
<a asp-action="AddInstructor">Add Instructor</a>
<table class="table table-dark">

    <tr>
        <th colspan="8">Instructor</th>
    </tr>

    <tr>
        <td>ID</td>
        <td>Name</td>
        <td>Rank</td>
        <td>Hiring Date</td>
        <td>Status</td>
        <td>Show Details</td>
        <td>Edit Details</td>
        <td>Delete</td>


    </tr>
    @foreach (var instructor in Model)
    {
        <tr>
            <td>@instructor.Id</td>
            <td>@instructor.FirstName @instructor.LastName</td>
            <td>@instructor.Rank</td>
            <td>@instructor.HiringDate</td>
            <td>@instructor.IsTenured</td>
            <td><a asp-action="ShowDetails" asp-route-id="@instructor.Id">Show Details</a></td>
            <td><a asp-action="Edit" asp-route-id="@instructor.Id">Edit Details</a></td>
            <td><a asp-action="Delete" asp-route-id="@instructor.Id">Delete</a></td>
        </tr>
    }
</table>

