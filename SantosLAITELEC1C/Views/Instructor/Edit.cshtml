@{
    ViewData["Title"] = "Edit Details";
}
@model Instructor;
<h1>Edit Instructor</h1>
<form asp-action="Edit" method="post">
    <label asp-for="Id">ID:</label><br>
    <input asp-for="Id" disabled><br>
    <label asp-for="FirstName">First name:</label><br>
    <input asp-for="FirstName"><br>
    <label asp-for="LastName">Last name:</label><br>
    <input asp-for="LastName" ><br>
    <label asp-for="Rank">Rank:</label><br>
    <select asp-for="Rank" asp-items="Html.GetEnumSelectList(typeof(Rank))"></select><br>
    <label asp-for="HiringDate">Hiring Date:</label><br>
    <input asp-for="HiringDate"><br>
    <label asp-for="IsTenured">Is Tenured?:</label><br>
    <input asp-for="IsTenured"><br><br>
    <input type="submit" value="Edit">
    <button type="button" onclick="history.back()">Cancel</button>
</form>