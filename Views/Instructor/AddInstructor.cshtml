@model Instructor;

<form asp-action="AddInstructor" asp-controller="Instructor" method="post">
    <div class="form-group">
        <label asp-for="InstructorId">ID</label>
        <input asp-for="InstructorId" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="InstructorFirstName">First Name</label>
        <input asp-for="InstructorFirstName" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="InstructorLastName">Last Name</label>
        <input asp-for="InstructorLastName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="IsTenured">Tenured</label>
        <input asp-for="@Model.IsTenured" />
    </div>
    <div class="form-group">
        <label asp-for="Rank">Rank</label>
        <select asp-for="Rank" asp-items="@Html.GetEnumSelectList(typeof(Rank))" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="HiringDate">Hiring Date</label>
        <input asp-for="HiringDate" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>