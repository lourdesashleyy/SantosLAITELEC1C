@model IEnumerable<Student>;

<div>Student List</div>

<a class="btn btn-primary" asp-action="AddStudent">Add Student</a>

<table class="table table-dark">

    <tr>
        <th colspan="7">Student</th>
    </tr>

    <tr>
        <td>Name</td>
        <td>Course</td>
        <td>Admission Date</td>
        <td>Email</td>
        <td>GPA</td>
        <td>Details</td>
        <td>Update</td>


    </tr>
    @foreach (var student in Model)
    {
        <tr>
            <td>@student.StudentFirstName @student.StudentLastName</td>
            <td>@student.Course</td>
            <td>@student.AdmissionDate</td>
            <td>@student.Email</td>
            <td>@student.GPA</td>
            <td><a asp-action="ShowDetail" asp-route-id="@student.StudentId" class="btn btn-primary">Show Details</a></td>
            <td><a asp-action="UpdateStudent" asp-route-id="@student.StudentId" class="btn btn-primary">Update Student</a></td>

        </tr>
    }
</table>